@model IEnumerable<MenuRol>
@{
    ViewData["Title"] = "Menü-Rol Eşleştirme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<a asp-action="RolEkle" class="btn btn-outline-primary btn-sm"><i class="fa-solid fa-plus"></i> Rol Ekle</a>

<br />

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>Menü Adı</th>
            <th>Rol Adı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Menu?.MenuAdi</td>
                <td>@item.Rol?.RolAdi</td>
                <td>
                    <a class="btn btn-outline-info btn-sm" asp-action="Guncelle" asp-route-id="@item.Id"><i class="fa-solid fa-edit"></i> </a>
                    <a asp-action="" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" onclick="return confirm('Durumu değiştirmek istediğinize emin misiniz?')"><i class="fa fa-refresh"></i></a>
                    <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger btn-sm"
                       onclick="return confirm('Bu eşleşmeyi silmek istediğinize emin misiniz?')">
                        <i class="fa fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>