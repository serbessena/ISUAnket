@model List<Birim>
@{
    ViewData["Title"] = "Birim Seç";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
    //int anketId = ViewBag.AnketId ?? 0; //anketId değeri şifresiz bir şekilde gelirken kullanilir
    string anketId = ViewBag.AnketId as string;
}


@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">@TempData["Hata"]</div>
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card shadow p-4" style="width: 1000px;">
        <h4 class="text-center mb-4">Birim Seçimi</h4>
        <form asp-action="BirimSec" method="post">

            <input type="hidden" name="anketId" value="@anketId" />

            <div class="form-group">
                <label for="secilenBirimId">Lütfen bir birim seçiniz:</label>
                <select class="form-control" id="secilenBirimId" name="secilenBirimId" required>
                    <option value="">-- Seçiniz --</option>
                    @foreach (var birim in Model)
                    {
                        <option value="@birim.Id">@birim.Ad</option>
                    }
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-primary btn-sm mt-3">Devam Et</button>
            </div>
        </form>
    </div>
</div>


