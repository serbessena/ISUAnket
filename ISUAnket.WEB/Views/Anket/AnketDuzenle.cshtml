@model Anket
@{
    ViewData["Title"] = "Anket Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="AnketDuzenle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="row justify-content-center">
        <div class="col-md-6">

            @* AnketAdı *@
            <div class="form-group mt-3">
                <label asp-for="Ad"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            @* BaşlangıçTarihi *@
            <div class="form-group mt-3">
                <label asp-for="BaslangicTarihi"></label>
                <input asp-for="BaslangicTarihi" class="form-control" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
            </div>

            @* BitişTarihi *@
            <div class="form-group mt-3">
                <label asp-for="BitisTarihi"></label>
                <input asp-for="BitisTarihi" class="form-control" />
                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
            </div>

            @* AnketDurumu dropdown *@
            <div class="form-group mt-3">
                <label asp-for="AnketDurumu"></label>
                <select asp-for="AnketDurumu" class="form-control" asp-items="Html.GetEnumSelectList<AnketDurumuEnum>()"></select>
                <span asp-validation-for="AnketDurumu" class="text-danger"></span>
            </div>

            @* AktifMi *@
            <div class="form-group form-check mt-3">
                <input asp-for="AktifMi" class="form-check-input" type="checkbox" />
                <label asp-for="AktifMi" class="form-check-label"></label>
                <span asp-validation-for="AktifMi" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 text-center">
                <a asp-controller="Anket" asp-action="AnketListesi" class="btn btn-outline-danger btn-sm">İptal</a>
                <button type="submit" class="btn btn-outline-info btn-sm">Güncelle</button>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}