@model Anket
@{
    ViewData["Title"] = "Anket Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-50">
    <div class="card shadow p-4 w-100" style="max-width: 600px;">

        <h4 class="text-center mb-4">@ViewData["Title"]</h4>

        <form asp-action="AnketDuzenle" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <input type="hidden" asp-for="Id" />

            @*  Anket Adı  *@
            <div class="mb-3">
                <label asp-for="Ad" class="form-label fw-semibold"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            @*  Başlangıç Tarihi  *@
            <div class="mb-3">
                <label asp-for="BaslangicTarihi" class="form-label fw-semibold"></label>
                <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger small"></span>
            </div>

            @*  Bitiş Tarihi  *@
            <div class="mb-3">
                <label asp-for="BitisTarihi" class="form-label fw-semibold"></label>
                <input asp-for="BitisTarihi" class="form-control" type="date" />
                <span asp-validation-for="BitisTarihi" class="text-danger small"></span>
            </div>

            @*  Anket Durumu  *@
            <div class="mb-3">
                <label asp-for="AnketDurumu" class="form-label fw-semibold"></label>
                <select asp-for="AnketDurumu" class="form-select" asp-items="Html.GetEnumSelectList<AnketDurumuEnum>()"></select>
                <span asp-validation-for="AnketDurumu" class="text-danger small"></span>
            </div>

            @*  Aktif Mi  *@
            <div class="form-check mt-3">
                <input asp-for="AktifMi" class="form-check-input" type="checkbox" id="AktifMi" />
                <label asp-for="AktifMi" class="form-check-label fw-semibold"></label>
                <span asp-validation-for="AktifMi" class="text-danger d-block small"></span>
            </div>

            @*  Butonlar  *@
            <div class="d-flex justify-content-center gap-2 mt-4">
                <a asp-controller="Anket" asp-action="AnketListesi" class="btn btn-outline-danger btn-sm">Vazgeç</a>
                <button type="submit" class="btn btn-outline-info btn-sm">Güncelle</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}