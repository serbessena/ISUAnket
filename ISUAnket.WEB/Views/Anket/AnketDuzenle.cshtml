@model Anket
@{
    ViewData["Title"] = "Anket Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="AnketDuzenle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group mt-3">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="BaslangicTarihi"></label>
        <input asp-for="BaslangicTarihi" class="form-control" />
        <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="BitisTarihi"></label>
        <input asp-for="BitisTarihi" class="form-control" />
        <span asp-validation-for="BitisTarihi"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AnketDurumu"></label>
        <select asp-for="AnketDurumu" class="form-control" asp-items="Html.GetEnumSelectList<AnketDurumuEnum>()"></select>
        <span asp-validation-for="AnketDurumu" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AktifMi"></label>
        <input asp-for="AktifMi" type="checkbox" />
        <span asp-validation-for="AktifMi" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <a asp-controller="Anket" asp-action="AnketListesi" class="btn btn-outline-danger btn-sm">İptal</a>
        <button type="submit" class="btn btn-outline-info btn-sm">Güncelle</button>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}