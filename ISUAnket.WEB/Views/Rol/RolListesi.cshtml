@model IEnumerable<Rol>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<a asp-action="RolEkle" class="btn btn-outline-primary btn-sm"><i class="fa-solid fa-plus"></i> Rol Ekle</a>

<br />

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>Rol Adı</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RolAdi</td>
                <td>
                    @if (item.AktifMi == true)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-info btn-sm" asp-action="RolGuncelle" asp-route-id="@item.Id"><i class="fa-solid fa-edit" title="Rolün bilgilerini değiştirir"></i> </a>
                    <a asp-action="RolDurumuDegistir" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" onclick="return confirm('Durumu değiştirmek istediğinize emin misiniz?')" title="Rolün durumunu değiştirir"><i class="fa fa-refresh"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

