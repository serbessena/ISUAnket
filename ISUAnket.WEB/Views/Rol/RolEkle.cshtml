@model Rol
@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="RolEkle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            @* RolAdı *@
            <div class="form-group mt-3">
                <label asp-for="RolAdi"></label>
                <input asp-for="RolAdi" class="form-control" />
                <span asp-validation-for="RolAdi" class="text-danger"></span>
            </div>


            <div class="form-group mt-3 text-center">
                <a asp-controller="Rol" asp-action="RolListesi" class="btn btn-outline-danger btn-sm">İptal</a>
                <button type="submit" class="btn btn-outline-primary btn-sm">Ekle</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}