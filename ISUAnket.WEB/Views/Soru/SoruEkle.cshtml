@model Soru
@{
    ViewData["Title"] = "Soru Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="SoruEkle" method="post" class="container mt-5">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            @* Anket dropdown *@
            <div class="form-group mt-3">
                <label asp-for="AnketId"></label>
                <select asp-for="AnketId" asp-items="ViewBag.AnketListesi" class="form-control" required oninvalid="this.setCustomValidity('Lütfen bir anket seçiniz.')"
                        oninput="this.setCustomValidity('')">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="AnketId" class="text-danger"></span> 
            </div>

            @* SoruMetni *@
            <div class="form-group mt-3">
                <label asp-for="SoruMetni"></label>
                <textarea asp-for="SoruMetni" class="form-control" rows="2"></textarea>
                <span asp-validation-for="SoruMetni" class="text-danger"></span>
            </div>

            @* SoruTipi dropdown *@
            <div class="form-group mt-3">
                <label asp-for="SoruTipi"></label>
                <select asp-for="SoruTipi" class="form-control" asp-items="Html.GetEnumSelectList<SoruTipiEnum>()" id="soruTipi">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="SoruTipi" class="text-danger"></span>
            </div>

            @* VeriTipi dropdown *@
            <div class="form-group mt-3">
                <label asp-for="VeriTipi"></label>
                <select asp-for="VeriTipi" class="form-control" asp-items="Html.GetEnumSelectList<VeriTipiEnum>()">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="SoruTipi" class="text-danger"></span>
            </div>

            @* ZorunluMu *@
            <div class="form-check mt-3">
                <input asp-for="ZorunluMu" class="form-check-input" type="checkbox" id="ZorunluMu" />
                <label asp-for="ZorunluMu" class="form-check-label"></label>
                <span asp-validation-for="ZorunluMu" class="text-danger d-block"></span>
            </div>

            @* SoruSeçenekelri *@
            <div class="form-group mt-3" id="seceneklerDiv" style="display:none;">
                <label>Seçenekler</label>

                <div id="seceneklerListesi"></div>

                <button type="button" id="secenekEkleBtn" class="btn btn-sm btn-outline-success btn-sm mt-2">Seçenek Ekle</button>

                <input type="hidden" asp-for="SoruSecenekleri" id="SoruSecenekleri" />
                <span asp-validation-for="SoruSecenekleri" class="text-danger"></span>
            </div>

            @* soru seçeneklerini virgül ile ayırarak yazmak gerekiyor *@
            @* <div class="form-group mt-3" id="seceneklerDiv" style="display:none;">
                <label asp-for="SoruSecenekleri"></label>
                <textarea asp-for="SoruSecenekleri" class="form-control" rows="3" placeholder="Çoktan seçmeli için virgülle ayırın"></textarea>
                <span asp-validation-for="SoruSecenekleri" class="text-danger"></span>
            </div> *@

            <div class="form-group mt-4 text-center">
                <a asp-controller="Soru" asp-action="SoruListesi" class="btn btn-outline-danger btn-sm me-2">İptal</a>
                <button type="submit" class="btn btn-outline-primary btn-sm">Kaydet</button>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script>

        $(document).ready(function () {

            function toggleSecenekler() {
                var selectedValue = parseInt($("#soruTipi").val());
                if (selectedValue === 2 || selectedValue === 3) {
                    $("#seceneklerDiv").show();
                } else {
                    $("#seceneklerDiv").hide();
                }
            }

            // Sayfa yüklenirken kontrol et
            toggleSecenekler();

            // Değişiklik olunca çalıştır
            $("#soruTipi").change(function () {
                toggleSecenekler();
            });

            // Seçenek ekleme işlemi
            $("#secenekEkleBtn").click(function () {
                $("#seceneklerListesi").append(`
                    <div class="input-group mb-2">
                        <input type="text" class="form-control secenekInput" placeholder="Seçenek giriniz" />
                        <button type="button" class="btn btn-outline-danger btn-sm secenekSilBtn">Sil</button>
                    </div>
                `);
            });

            // Seçenek silme işlemi
            $(document).on('click', '.secenekSilBtn', function () {
                $(this).closest('.input-group').remove();
            });

            // Form submit olduğunda tüm seçenekleri birleştir:
            $("form").submit(function () {
                var secenekler = [];
                $(".secenekInput").each(function () {
                    var val = $(this).val().trim();
                    if (val !== "") {
                        secenekler.push(val);
                    }
                });
                $("#SoruSecenekleri").val(secenekler.join(","));
            });

        });


    </script>


