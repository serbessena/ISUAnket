@model Soru
@{
    ViewData["Title"] = "Soru Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="SoruEkle" method="post" class="container mt-5">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="form-group mt-3">
                <label asp-for="AnketId"></label>
                <select asp-for="AnketId" asp-items="ViewBag.AnketListesi" class="form-control">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="AnketId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="SoruMetni"></label>
                <textarea asp-for="SoruMetni" class="form-control" rows="2"></textarea>
                <span asp-validation-for="SoruMetni" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="SoruTipi"></label>
                <select asp-for="SoruTipi" class="form-control" asp-items="Html.GetEnumSelectList<SoruTipiEnum>()" id="soruTipi">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="SoruTipi" class="text-danger"></span>
            </div>

            <div class="form-check mt-3">
                <input asp-for="ZorunluMu" class="form-check-input" type="checkbox" id="ZorunluMu" />
                <label asp-for="ZorunluMu" class="form-check-label"></label>
                <span asp-validation-for="ZorunluMu" class="text-danger d-block"></span>
            </div>

            <div class="form-group mt-3" id="seceneklerDiv" style="display:none;">
                <label asp-for="SoruSecenekleri"></label>
                <textarea asp-for="SoruSecenekleri" class="form-control" rows="3" placeholder="Çoktan seçmeli için virgülle ayırın"></textarea>
                <span asp-validation-for="SoruSecenekleri" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 text-center">
                <a asp-controller="Soru" asp-action="SoruListesi" class="btn btn-outline-danger btn-sm me-2">İptal</a>
                <button type="submit" class="btn btn-outline-primary btn-sm">Kaydet</button>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script>
        $(document).ready(function () {

            function toggleSecenekler() {
                var selectedValue = parseInt($("#soruTipi").val());
                if (selectedValue === 2 || selectedValue === 3) {
                    $("#seceneklerDiv").show();
                } else {
                    $("#seceneklerDiv").hide();
                }
            }

            // Sayfa yüklenirken kontrol et
            toggleSecenekler();

            // Değişiklik olunca çalıştır
            $("#soruTipi").change(function () {
                toggleSecenekler();
            });

        });
    </script>
}