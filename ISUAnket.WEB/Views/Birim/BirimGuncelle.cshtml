@model Birim
@{
    ViewData["Title"] = "Birim Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="BirimGuncelle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="row justify-content-center">
        <div class="col-md-6">

            @* BirimAdı *@
            <div class="form-group mt-3">
                <label asp-for="Ad"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 text-center">
                <a asp-controller="Birim" asp-action="BirimListesi" class="btn btn-outline-danger btn-sm">İptal</a>
                <button type="submit" class="btn btn-outline-info btn-sm">Güncelle</button>
            </div>

        </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}