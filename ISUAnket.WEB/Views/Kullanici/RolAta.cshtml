@model Kullanici
@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-50">
    <div class="card shadow p-4 w-100" style="max-width: 500px;">

        <h4 class="text-center mb-4">@ViewData["Title"]</h4>

        <form asp-action="RolAta" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <input type="hidden" asp-for="Id" />

            @*  Kullanıcı Adı *@
            <div class="mb-3">
                <label asp-for="KulaniciAdi" class="form-label fw-semibold"></label>
                <input type="text" class="form-control" asp-for="KulaniciAdi" readonly />
            </div>

            @*  Rol Seçimi *@
            <div class="mb-3">
                <label asp-for="RolId" class="form-label fw-semibold"></label>
                <select asp-for="RolId" class="form-select" asp-items="ViewBag.RollerListesi">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="RolId" class="text-danger small"></span>
            </div>

            @*  Butonlar  *@
            <div class="d-flex justify-content-center gap-2 mt-4">
                <a asp-controller="Kullanici" asp-action="KullaniciListesi" class="btn btn-outline-danger">İptal</a>
                <button type="submit" class="btn btn-outline-primary">Rol Ata</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}