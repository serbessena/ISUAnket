@model KullaniciLoginVM
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;">

        <h4 class="text-center mb-4">@ViewData["Title"]</h4>

        <form asp-action="Login" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            @* Kullanıcı Adı *@
            <div class="mb-3">
                <label asp-for="KullaniciAdi" class="form-label fw-semibold"></label>
                <input asp-for="KullaniciAdi" class="form-control" />
                <span asp-validation-for="KullaniciAdi" class="text-danger small"></span>
            </div>

            @* Şifre *@
            <div class="mb-3">
                <label asp-for="Sifre" class="form-label fw-semibold"></label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger small"></span>
            </div>

            @*  Giriş Butonu *@
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-outline-primary">Giriş Yap</button>
            </div>
           
            @* <p class="text-center small mt-3">Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p> *@

        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

