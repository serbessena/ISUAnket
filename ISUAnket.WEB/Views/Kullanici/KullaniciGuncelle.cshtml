@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-50">
    <div class="card shadow p-4 w-100" style="max-width: 600px;">

        <h4 class="text-center mb-4">@ViewData["Title"]</h4>

        <form asp-action="KullaniciGuncelle" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <input type="hidden" asp-for="Id" />

            @*  Rol  *@
            <div class="mb-3">
                <label asp-for="RolId" class="form-label fw-semibold"></label>
                <select class="form-select" asp-for="RolId" asp-items="ViewBag.RollerListesi">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="RolId" class="text-danger small"></span>
            </div>

            @*  TCKN *@
            <div class="mb-3">
                <label asp-for="TCKN" class="form-label fw-semibold"></label>
                <input class="form-control" asp-for="TCKN" />
                <span asp-validation-for="TCKN" class="text-danger small"></span>
            </div>

            @*  Ad  *@
            <div class="mb-3">
                <label asp-for="Ad" class="form-label fw-semibold"></label>
                <input class="form-control" asp-for="Ad" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            @*  Soyad  *@
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label fw-semibold"></label>
                <input class="form-control" asp-for="Soyad" />
                <span asp-validation-for="Soyad" class="text-danger small"></span>
            </div>

            @*  Eposta  *@
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            @*  Sifre  *@
            <div class="mb-3">
                <label asp-for="Sifre" class="form-label fw-semibold"></label>
                <input asp-for="Sifre" type="password" class="form-control" value="dummy-password" placeholder="••••••••" autocomplete="new-password" />
                <span asp-validation-for="Sifre" class="text-danger small"></span>
            </div>

            @*  Aktif Mi  *@
            <div class="form-check mt-3">
                <input asp-for="AktifMi" class="form-check-input" type="checkbox" id="AktifMi" />
                <label asp-for="AktifMi" class="form-check-label fw-semibold"></label>
                <span asp-validation-for="AktifMi" class="text-danger d-block small"></span>
            </div>

            @*  Butonlar  *@
            <div class="d-flex justify-content-center gap-2 mt-4">
                <a asp-controller="Kullanici" asp-action="KullaniciListesi" class="btn btn-outline-danger">Vazgeç</a>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}