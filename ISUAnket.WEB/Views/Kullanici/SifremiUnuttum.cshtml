@model KullaniciSifremiUnuttumVM
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<form asp-action="SifremiUnuttum" method="post" class="container mt-5">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="form-group mt-3">
                <label asp-for="TCKN"></label>
                <input asp-for="TCKN" class="form-control" />
                <span asp-validation-for="TCKN" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="KullaniciAdi"></label>
                <input asp-for="KullaniciAdi" class="form-control" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-warning btn-sm">Şifre Sıfırla</button>
            </div>

            <p class="text-center mt-3">
                <a asp-action="Login">Giriş Yap</a>
            </p>

        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}