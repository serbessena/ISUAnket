@model KullaniciSifremiUnuttumVM
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h2>Şifremi Unuttum</h2>

<form asp-action="SifremiUnuttum" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TCKN"></label>
        <input asp-for="TCKN" class="form-control" />
        <span asp-validation-for="TCKN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KullaniciAdi"></label>
        <input asp-for="KullaniciAdi" class="form-control" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Şifre Sıfırla</button>
</form>

<p>
    <a asp-action="Login">Giriş Yap</a>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}