@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="card shadow p-4 my-4 mx-auto" style="max-width: 600px;">

    <dl class="row">
        <dt class="col-sm-4 fw-semibold">TCKN</dt>
        <dd class="col-sm-8">@Model.TCKN</dd>

        <dt class="col-sm-4 fw-semibold">Ad</dt>
        <dd class="col-sm-8">@Model.Ad</dd>

        <dt class="col-sm-4 fw-semibold">Soyad</dt>
        <dd class="col-sm-8">@Model.Soyad</dd>

        <dt class="col-sm-4 fw-semibold">Kullanıcı Adı</dt>
        <dd class="col-sm-8">@Model.KulaniciAdi</dd>

        <dt class="col-sm-4 fw-semibold">E-posta</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4 fw-semibold">Aktif Mi?</dt>
        <dd class="col-sm-8">@((Model.AktifMi) ? "Evet" : "Hayır")</dd>

        <dt class="col-sm-4 fw-semibold">Oturum Açık mı?</dt>
        <dd class="col-sm-8">@((Model.OturumAcikMi) ? "Evet" : "Hayır")</dd>
    </dl>

    <div class="text-center mt-4">
        <a asp-controller="Kullanici" asp-action="SifreDegistir" class="btn btn-outline-primary me-2">Şifre Değiştir</a>
        <a asp-controller="Kullanici" asp-action="ProfilDuzenle" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Profili Düzenle</a>
    </div>

</div>

